<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tyct.thankyoutrust.ProfileActivity" >

    <LinearLayout
        android:id="@+id/llProfileTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin" >

        <ImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/profile_place_holder"
            android:contentDescription="@string/message_name_placeholder"/>

        <LinearLayout
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewProfName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:text="@string/placeholderName"
                android:textColor="#84A961" />

            <TextView
                android:id="@+id/textViewProfEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:text="@string/prompt_email"
                android:textColor="#699ffc" />

            <TextView
                android:id="@+id/textViewProfLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:gravity="end"
                android:text="@string/location"
                android:textColor="#84A961" />

        </LinearLayout>
    </LinearLayout>
    
    <Button
        android:id="@+id/btnProfEditInfo"
        style="@style/blue_button"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@drawable/blue_button"
        android:text="@string/edit_info" />

    <Button
        android:id="@+id/btnProfEditLocation"
        style="@style/blue_button"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@drawable/blue_button"
        android:text="@string/edit_location" />

    <Button
        android:id="@+id/btnChangePassword"
        style="@style/blue_button"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@drawable/blue_button"
        android:text="@string/change_pw" />

</LinearLayout>
</ScrollView>