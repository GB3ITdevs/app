<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shrinkColumns="1,2"
        android:stretchColumns="1,2"
        android:orientation="vertical" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/tvProfName"
                style="@style/page_headings"
                android:text="Name"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
        </TableRow>

       <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:padding="2dp"
            android:layout_height="wrap_content">
             
               <TextView
                android:id="@+id/textView1"
                 android:textColor="#699ffc"
                android:text="Email:" />

             <TextView
                 android:id="@+id/tvProfEmail"
                 android:gravity="left"
                 android:text="Email" />
            
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
             android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp" >
             
              <TextView
                android:id="@+id/textView10"
                 android:textColor="#699ffc"
                 android:paddingEnd="3dp"
                android:text="@string/phone_number" />

             <TextView
                 android:id="@+id/tvPPhoneNumber"
                 android:gravity="left"
                 android:text="@string/phone_number" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
             android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp" >
             
              <TextView
                android:id="@+id/textView11"
                 android:textColor="#699ffc"
                android:text="@string/st_address" />

             <TextView
                 android:id="@+id/tvPStreetAddress"
                 android:gravity="left"
                 android:text="@string/st_address" />
        </TableRow>
        
         <TableRow
            android:id="@+id/tableRow5"
             android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">
             
               <TextView
                android:id="@+id/textView12"
                 android:textColor="#699ffc"
                android:text="@string/suburb" />

             <TextView
                 android:id="@+id/tvPSuburb"
                 android:gravity="left"
                 android:text="@string/suburb" />
        </TableRow>
        
          <TableRow
            android:id="@+id/tableRow6"
             android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">
             
                <TextView
                android:id="@+id/textView13"
                 android:textColor="#699ffc"
                android:text="@string/city" />

             <TextView
                 android:id="@+id/tvPCity"
                 android:gravity="left"
                 android:text="@string/city" />
        </TableRow>
        
           <TableRow
            android:id="@+id/tableRow7"
             android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">
             
                 <TextView
                android:id="@+id/textView14"
                 android:textColor="#699ffc"
                android:text="@string/community" />

             <TextView
                 android:id="@+id/tvPCommunity"
                 android:gravity="left"
                 android:text="@string/community" />
        </TableRow>
    </TableLayout>
    
    <Button
        android:id="@+id/btnOptions"
        style="@style/blue_button"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@drawable/blue_button"
        android:text="@string/options" />

    </LinearLayout>
</ScrollView>