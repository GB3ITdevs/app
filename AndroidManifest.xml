<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tyct.thankyoutrust"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/app_name"
            android:parentActivityName=".LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tyct.thankyoutrust.LoginActivity" />
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name=".Projects"
            android:label="@string/app_name"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tyct.thankyoutrust.HomeActivity" />
        </activity>
        <activity
            android:name=".SingleProject"
            android:label="@string/title_activity_single_project" >
        </activity>
        <activity
            android:name=".WelcomeScreen"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutUs"
            android:label="@string/title_activity_about_us" >
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ProjectDetailsActivity"
            android:label="@string/title_activity_project_details"
            android:parentActivityName=".Projects" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tyct.thankyoutrust.Projects" />
        </activity>
        <activity
            android:name=".AdminHomePage"
            android:label="@string/title_activity_admin_home_page"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tyct.thankyoutrust.HomeActivity" />
        </activity>
        <activity
            android:name=".AdminAllUsers"
            android:label="@string/title_activity_admin_all_users"
            android:parentActivityName=".AdminHomePage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tyct.thankyoutrust.AdminHomePage" />
        </activity>
        <activity
            android:name=".AdminAllCommunities"
            android:label="@string/title_activity_admin_all_communities"
            android:parentActivityName=".AdminHomePage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tyct.thankyoutrust.AdminHomePage" />
        </activity>
        <activity
            android:name=".AdminReports"
            android:label="@string/title_activity_admin_reports"
            android:parentActivityName=".AdminHomePage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tyct.thankyoutrust.AdminHomePage" />
        </activity>
        <activity
            android:name=".ConfirmDialog"
            android:label="@string/title_activity_confirm_dialog" >
        </activity>
    </application>

</manifest>